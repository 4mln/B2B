# B2B Marketplace Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME=B2B Marketplace
APP_VERSION=2.1.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/marketplace
REDIS_URL=redis://localhost:6379/0
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# REQUIRED: Generate a secure secret key (minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secure-secret-key-here-minimum-32-characters

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# OTP & SMS CONFIGURATION
# =============================================================================
# Development bypass (NEVER enable in production)
BYPASS_OTP=false

# OTP Settings
OTP_EXPIRE_MINUTES=5
MAX_OTP_ATTEMPTS=3
MAX_OTP_REQUESTS_PER_HOUR=5

# SMS Provider Configuration
# Options: console, twilio, kavenegar, aws_sns
SMS_PROVIDER=console

# Kavenegar (Iran) Configuration
KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_OTP_TEMPLATE=otp

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=/api/v1
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# REDIS CONFIGURATION (for refresh token revocation)
# =============================================================================
REQUIRE_REFRESH_REDIS=false

# =============================================================================
# PLUGIN SYSTEM
# =============================================================================
ENABLE_PLUGIN_HOT_RELOAD=false

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================
LEGACY_MODE=true
METRICS_ENABLED=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and configure for production deployment
# ENVIRONMENT=production
# DEBUG=false
# BYPASS_OTP=false
# REQUIRE_REFRESH_REDIS=true
# SECRET_KEY=your-production-secret-key
# SMS_PROVIDER=twilio
# TRUSTED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com



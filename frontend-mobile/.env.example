# B2B Marketplace Frontend Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Backend API Configuration
# =============================================================================
# Development: Use localhost (or your machine's IP for physical devices)
EXPO_PUBLIC_API_URL=http://localhost:8000

# For testing on physical devices on same network, use your computer's local IP:
# EXPO_PUBLIC_API_URL=http://192.168.1.100:8000

# Production:
# EXPO_PUBLIC_API_URL=https://api.b2b-marketplace.com

# API prefix - must match backend configuration
EXPO_PUBLIC_API_PREFIX=/api/v1

# Alternative environment variable (for compatibility)
BACKEND_URL=http://localhost:8000

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=B2B Marketplace
APP_VERSION=2.1.0
NODE_ENV=development

# =============================================================================
# Development Tools
# =============================================================================
# Bypass OTP during development (NEVER use in production!)
EXPO_PUBLIC_BYPASS_OTP=false

# Enable debug logging
EXPO_PUBLIC_DEBUG=true

# =============================================================================
# Build Configuration
# =============================================================================
# Expo builder API key (optional - for EAS builds)
EXPO_PUBLIC_BUILDER_API_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# Push Notifications (Optional)
# =============================================================================
EXPO_PUSH_TOKEN=

# =============================================================================
# Analytics (Optional)
# =============================================================================
ANALYTICS_KEY=

# =============================================================================
# Payment Gateway (Optional)
# =============================================================================
PAYMENT_GATEWAY_URL=
PAYMENT_GATEWAY_KEY=

# =============================================================================
# Authentication Settings
# =============================================================================
# JWT secret (should match backend - for validation only)
JWT_SECRET=your-jwt-secret-key
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# =============================================================================
# Theming
# =============================================================================
EXPO_PUBLIC_DEFAULT_THEME=light  # Options: light, dark, system

# =============================================================================
# Localization
# =============================================================================
EXPO_PUBLIC_DEFAULT_LANGUAGE=fa  # Options: fa, en

# =============================================================================
# API Timeout Configuration
# =============================================================================
API_TIMEOUT=15000  # 15 seconds
API_HEALTH_CHECK_TIMEOUT=8000  # 8 seconds

# =============================================================================
# Production Checklist
# =============================================================================
# Before deploying to production, ensure:
# ✓ EXPO_PUBLIC_API_URL points to production backend
# ✓ EXPO_PUBLIC_BYPASS_OTP is set to false
# ✓ EXPO_PUBLIC_DEBUG is set to false
# ✓ NODE_ENV is set to production
# ✓ All API keys are properly configured
# ✓ Push notification tokens are set up
# ✓ Analytics keys are configured
# ✓ Payment gateway credentials are correct
# ✓ SSL/TLS is enabled for all API calls
# ✓ Error tracking is enabled (Sentry, etc.)
# ✓ App is tested on both iOS and Android
